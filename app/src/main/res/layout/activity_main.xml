<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 카메라 프리뷰용 TextureView -->
    <TextureView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 객체 위에 표시될 라벨 (초기에는 숨김) -->
    <TextView
        android:id="@+id/objectLabelOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="150dp"
        android:background="@drawable/label_background"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:visibility="gone"
        tools:text="pomme"
        tools:visibility="visible" />

    <!-- 새로고침 버튼 (초기에는 숨김) -->
    <ImageButton
        android:id="@+id/refreshButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:background="@drawable/refresh_button_background"
        android:contentDescription="Refresh recognition"
        android:src="@drawable/ic_refresh"
        android:visibility="gone" />

    <!-- 하단에 위치할 채팅 컨테이너 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/chatContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardBackgroundColor="#F8F8F8"
        app:cardElevation="4dp"
        app:cardCornerRadius="16dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 숨겨진 정보 영역 (필요 시 objectLabel, translationView, chatResponse 표시) -->
            <LinearLayout
                android:id="@+id/infoArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/objectLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/translationView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/chatResponse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 채팅 메시지 리스트 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chatRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:paddingHorizontal="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clipToPadding="false" />

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <!-- 메시지 입력 및 버튼 영역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- 텍스트 입력창 -->
                <EditText
                    android:id="@+id/messageInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/message_input_background"
                    android:hint="메시지를 입력하세요"
                    android:padding="12dp"
                    android:maxLines="4"
                    android:inputType="textMultiLine" />

                <!-- 음성 입력 버튼 -->
                <ImageButton
                    android:id="@+id/voiceButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="음성 입력 (비활성화됨)"
                    android:src="@drawable/ic_mic"
                    android:alpha="0.5"
                    android:enabled="true" />

                <!-- 전송 버튼 -->
                <ImageButton
                    android:id="@+id/sendButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Send message"
                    android:src="@drawable/ic_send" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
